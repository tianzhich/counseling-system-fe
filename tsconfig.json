{
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "./build/",
        "sourceMap": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "module": "esnext",
        "moduleResolution": "node",
        "target": "es5",
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["es2015", "dom"],
        "paths": {
            "@features/*": ["features/*"],
            "@common/*": ["common/*"],
            "@styles/*": ["styles/*"],
            "@utils/*": ["utils/*"],
            "@fakeData": ["features/common/fakeData.ts"],
            "@types": ["features/common/types.ts"],
            "@images/*": ["images/*"]
        },
    },
    "include": [
        "./src/**/*"
    ]
}